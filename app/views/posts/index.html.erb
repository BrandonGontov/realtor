

<div class="container" style="margin-top:70px;">
  <% @posts.each do |post| %>
      <div class="col-sm-12 col-md-6 col-lg-4" >
        <div class="thumbnail">
            <img src="assets/pic1.png" alt="...">
            <p>Title:<%= post.title %></p>
            <p>Price:<%= post.price %></p>
            <p>Area:<%= post.area %></p>
            <p>
              <%= link_to "Show", post, :class => "btn btn-primary btn-lg" %>
          </p>
        </div>
      </div>
  <% end %>
</div>
