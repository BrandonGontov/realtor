

<div class="container">
  <div class="row" >
    <% @posts.each do |post| %>
      <div class="col-sm-12 col-md-6 col-lg-4" >
        <div class="thumbnail">
            <img src="assets/pic1.png" alt="...">
            <h3><%= post.title %></h3>
            <p><%= post.price %></p>
            <p>
              <%= link_to "Show", post, :class => "btn btn-primary btn-lg" %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
